<%- include('navigation') %>

<div class="main-with-sidebar">
  <div class="container">
    <h1>Users</h1>
    <p style="color:var(--muted);margin-top:6px">Manage all users in the system</p>

    <div class="panel" style="margin-top:24px">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Role</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach((user) => { %>
            <tr>
              <td><strong><%= user.name %></strong></td>
              <td>
                <span style="display:inline-block;padding:4px 10px;border-radius:4px;background:rgba(37,99,235,0.15);color:#60a5fa;font-size:12px;font-weight:500">
                  <%= user.role %>
                </span>
              </td>
              <td><%= user.email %></td>
              <td><%= user.phone %></td>
              <td style="display:flex;gap:8px">
                <a href="/admin/users/edit/<%= user._id %>" class="btn secondary" style="font-size:13px;padding:8px 12px">Edit</a>
                <form 
                  action="/admin/users/delete/<%= user._id %>" 
                  method="POST"
                  style="display:inline;"
                  onsubmit="return confirm('Are you sure you want to delete this user?');"
                >
                  <button type="submit" class="btn" style="background:#dc2626;color:white;font-size:13px;padding:8px 12px;border:none">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <div style="margin-top:24px;display:flex;gap:12px;align-items:center;justify-content:center;color:var(--muted)">
      <% if (currentPage > 1) { %>
        <a href="/admin/users/list?page=<%= currentPage - 1 %>" class="btn secondary">← Previous</a>
      <% } %>

      <span>Page <strong><%= currentPage %></strong> of <strong><%= totalPages %></strong></span>

      <% if (currentPage < totalPages) { %>
        <a href="/admin/users/list?page=<%= currentPage + 1 %>" class="btn secondary">Next →</a>
      <% } %>
    </div>
  </div>
</div>
